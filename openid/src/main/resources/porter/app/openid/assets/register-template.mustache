<html xmlns="http://www.w3.org/1999/html">
<head>
    <title>Register new account</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css" />
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap-theme.min.css"/>
    <style type="text/css">
        .header {
            margin-bottom: 15px;
            border-bottom: 1px solid #eee;
        }
    </style>
</head>
<body>
<div class="container">
    <div class="header">
        <h1>Porter <small>{{#porter}}v{{version}}{{/porter}}</small></h1>
    </div>
    <h2>Register new account</h2>
    <div class="pull-right">
        <a href="{{loginUrl}}">Sign in</a>
    </div>
    <br/>
    <div class="col-md-5 col-md-offset-3 porter-registerform">
        <form role="form" action="{{actionUrl}}" method="post">
            <input type="hidden" name="porter.action" value="register"/>
            {{#registerFailed}}
                <div class="alert alert-danger alert-dismissable">
                    <p><strong>Error:</strong> Registration failed!</p>
                    <ul>
                    {{#registerFailedReasons}}
                    <li>{{.}}</li>
                    {{/registerFailedReasons}}
                    </ul>
                </div>
            {{/registerFailed}}
            <div class="form-group">
                <label for="username">Username</label>
                <input type="text" class="form-control input-lg" id="username" name="porter.username" placeholder="Username" value="{{#fields}}{{porter.username}}{{/fields}}"/>
            </div>
            {{#withEmail}}
            <div class="form-group">
                <label for="email">Email</label>
                <input type="text" class="form-control input-lg" id="email" name="porter.email" placeholder="Email" value="{{#fields}}{{porter.email}}{{/fields}}"/>
            </div>
            {{/withEmail}}
            <div class="form-group">
                <label for="password1">Password</label>
                <input type="password" class="form-control input-lg" id="password1" name="porter.password1" placeholder="Password"/>
            </div>
            <div class="form-group">
                <label for="password2">Repeat Password</label>
                <input type="password" class="form-control input-lg" id="password2" name="porter.password2" placeholder="Repeat Password"/>
            </div>
            {{#withKey}}
            <div class="form-group">
                <label for="registerKey">Invitation Key</label>
                <input type="text" class="form-control input-lg" id="registerKey" name="porter.registerKey" placeholder="Invitation Key" value="{{#fields}}{{porter.registerKey}}{{/fields}}"/>
            </div>
            {{/withKey}}
            <div class="form-group">
                <input type="submit" name="porter.submitType" class="btn btn-primary btn-lg" value="Register"/>
            </div>
        </form>
    </div>
</div>
</body>
</html>