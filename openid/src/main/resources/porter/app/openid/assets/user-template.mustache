<html xmlns="http://www.w3.org/1999/html">
<head>
    <title>{{#account}}{{name}}{{/account}}'s account</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css" />
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap-theme.min.css"/>
    <style type="text/css">
        .header {
            margin-bottom: 15px;
            border-bottom: 1px solid #eee;
        }
    </style>
</head>
<body>
<div class="container">
    <div class="header">
        <h1>Porter <small>OpenId Provider {{#porter}}v{{version}}{{/porter}}</small></h1>
        <span class="pull-right">
            <a href="/?porter.action=logout">Logout</a>
        </span>
    </div>
    <h2>{{#account}}{{name}}'s{{/account}} account</h2>
    {{#infoMessage}}
        <p class="alert alert-{{level}}">{{message}}</p>
    {{/infoMessage}}

    <div class="row">
        <div class="col-md-6">
            <form role="form" action="{{clearRememberContinueUrl}}" method="post">
                <h4>Clear remembered realms</h4>
                <p>Clears remembered realm decisions.</p>
                <input type="hidden" name="porter.action" value="clearRememberedRealms"/>
                <input type="submit" class="btn btn-primary" value="Clear"/>
            </form>
        </div>
        <div class="col-md-6">
            <form role="form" action="{{changeSecretUrl}}" method="post">
                <h4>Change password</h4>
                <input type="hidden" name="porter.action" value="changeSecret"/>
                <div class="form-group">
                    <label for="password1" class="sr-only">New Password</label>
                    <input type="password" class="form-control" id="password1" name="porter.password1" placeholder="New password"/>
                </div>
                <div class="form-group">
                    <label for="password2" class="sr-only">Repeat</label>
                    <input type="password" class="form-control" id="password2" name="porter.password2" placeholder="Repeat password"/>
                </div>
                <div class="form-group">
                    <input type="submit" name="porter.submitType" class="btn btn-primary" value="OK"/>
                </div>
            </form>
        </div>
    </div>
</div>
</body>
</html>